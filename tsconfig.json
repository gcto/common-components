{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@src/*": ["src/*"]
    }
  },

  "include": ["**/*.ts", "*.vue"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "**/__tests__/*"
  ]
}
